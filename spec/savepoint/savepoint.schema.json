{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Universal AI Save Point",
  "type": "object",
  "required": [
    "version",
    "created_at",
    "workspace",
    "context",
    "artifacts"
  ],
  "properties": {
    "version": { "type": "string" },
    "created_at": { "type": "string" },
    "workspace": {
      "type": "object",
      "required": ["root", "cwd", "python", "platform"],
      "properties": {
        "root": { "type": "string" },
        "cwd": { "type": "string" },
        "python": { "type": "string" },
        "platform": { "type": "string" }
      }
    },
    "context": {
      "type": "object",
      "required": ["description", "notes"],
      "properties": {
        "description": { "type": "string" },
        "notes": { "type": "array" }
      }
    },
    "artifacts": { "type": "array" },

    "engine": {
      "type": "object",
      "required": ["name"],
      "properties": {
        "name": { "type": "string" },
        "provider": { "type": "string" },
        "type": {
          "type": "string",
          "enum": ["llm", "vision", "speech", "multi-modal", "custom"]
        }
      }
    },
    "locale": { "type": "string" },
    "user_id": {
      "type": "string",
      "description": "Hashed or pseudonymous ID"
    },
    "conversation_state": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["id", "role", "content", "created_at"],
        "properties": {
          "id": { "type": "string" },
          "role": { "type": "string", "pattern": "^[a-z0-9_-]+$" },
          "content": {
            "type": "array",
            "items": {
              "type": "object",
              "required": ["type", "data"],
              "properties": {
                "type": {
                  "type": "string",
                  "enum": [
                    "text",
                    "image",
                    "audio",
                    "video",
                    "binary",
                    "structured"
                  ]
                },
                "data": {},
                "mime": { "type": "string" }
              }
            }
          },
          "created_at": { "type": "string", "format": "date-time" },
          "metadata": { "type": "object", "additionalProperties": true }
        },
        "additionalProperties": false
      }
    },
    "memory_state": {
      "type": "object",
      "properties": {
        "kv": { "type": "object", "additionalProperties": true },
        "notes": {
          "type": "array",
          "items": { "type": "string" }
        }
      },
      "additionalProperties": true
    },
    "attachments": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["id", "uri"],
        "properties": {
          "id": { "type": "string" },
          "uri": { "type": "string" },
          "mime": { "type": "string" },
          "hash": { "type": "string" },
          "description": { "type": "string" }
        },
        "additionalProperties": false
      }
    },
    "integrity": {
      "type": "object",
      "required": ["algorithm", "checksum"],
      "properties": {
        "algorithm": {
          "type": "string",
          "enum": ["sha256", "sha512"]
        },
        "checksum": { "type": "string" }
      }
    },
    "provenance": {
      "type": "object",
      "properties": {
        "repo": { "type": "string" },
        "branch": { "type": "string" },
        "commit": { "type": "string" }
      },
      "additionalProperties": false
    },
    "protocol_metadata": {
      "type": "object",
      "additionalProperties": true
    }
  },
  "additionalProperties": false
}
